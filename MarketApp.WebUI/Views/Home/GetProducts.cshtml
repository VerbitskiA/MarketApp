@model List<MarketApp.WebUI.Models.ProductViewModel>
<h1>Представленные товары</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название товара</th>
                <th scope="col">Описание</th>                
                <th>@Html.ActionLink("Добавить новый товар", "CreateProduct" , new { shopId = Model.First().ShopId })</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>@Html.ActionLink("Редактировать", "EditProduct", new { id = Model[i].Id, shopId = Model[i].ShopId })</td>
                <td>@Html.ActionLink("Удалить", "DeleteProduct", new { id = Model[i].Id, shopId = Model[i].ShopId })</td>
            </tr>
            }
        </tbody>
    </table>
</div>
