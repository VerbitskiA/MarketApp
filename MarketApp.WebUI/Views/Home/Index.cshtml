@{
    ViewData["Title"] = "Наши магазины";
}
@model List<MarketApp.WebUI.Models.ShopViewModel>
<div class="text-center">
    <h1 class="display-4">Наши магазины</h1>    
</div>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название магазина</th>
                <th scope="col">Адрес</th>
                <th scope="col">Время работы:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i+1)</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Shedule</td>
                    <td>@Html.ActionLink("Товары", "GetProducts", new { id=Model[i].Id })</td>
                </tr>
            }
        </tbody>
    </table>    
</div>